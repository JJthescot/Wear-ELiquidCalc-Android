<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmAction_Activity"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/confirmationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <android.support.wear.widget.CircularProgressLayout
        android:id="@+id/confirmation_circular_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        app:backgroundColor="@color/blue"
        app:colorSchemeColors="@color/circular_button_pressed"
        app:strokeWidth="4dp">
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_full_cancel" />
    </android.support.wear.widget.CircularProgressLayout>
</FrameLayout>

